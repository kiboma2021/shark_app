<p style="color: green"><%= notice %></p>

<%= render @shark %>

<h2>COMMENT</h2>
<%= render 'sharks/comment' %>

<div>
  <%= link_to "Edit this shark", edit_shark_path(@shark) %> |
  <%= link_to "Back to sharks", sharks_path %>

  <%= button_to "Destroy this shark", @shark, method: :delete %>
</div>

<div data-controller="comments">
  <button button data-action="comments#showAll" > Show Older Posts</button>

  <div data-target="comments.show" style="visibility:hidden" >
    <%= render 'sharks/allcomments' %>
  </div>
</div>

